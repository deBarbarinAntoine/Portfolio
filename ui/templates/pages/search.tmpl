{{define "page"}}
    <div class="container-search">
        <div class="container-your-search">
            <p> Posts for </p> <div class="your-search"> {{with .Search}} <span class="search-text"> {{.}} </span> {{end}} </div>
        </div>
        <div class="container-search-content">

            {{if ne (len .Posts.List) 0}}
                {{range .Posts.List}}
                    <div class="rectangle-category borders borders-hover relative">
                        <img src="/static/img/icons/tech-icon.svg" alt="post icon">
                        <h5> {{.Title}} </h5>
                        <a href="/post/{{.ID}}" class="category-link abs full on-top"></a>
                    </div>
                {{end}}
            {{else}}
                <div class="flash">No post found for {{with .Search}} <span class="search-text"> {{.}} </span> {{end}} :/</div>
            {{end}}

        </div>
    </div>
{{end}}